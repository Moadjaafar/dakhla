{
    "name": "mishalestev/laravel-files-translator",
    "description": "Extract translations from HTML/Blade files and generate translation files.",
    "version": "1.0.1",
    "type": "library",
    "keywords": [
        "laravel-files-translator",
        "laravel",
        "translation",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Misha Lestev",
            "email": "lestev.mi@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "stichoza/google-translate-php": "^4.0",
        "laravel/framework": "^8.0 || ^9.0 || ^10.0 || ^11.0",
        "stillat/blade-parser": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "TranslationExtractor\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TranslationExtractor\\TranslationExtractorServiceProvider"
            ]
        }
    }
}